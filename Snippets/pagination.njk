<div class="mt-4 md:mt-6">
    <nav role="navigation" aria-label="Pagination Navigation" class="flex items-center justify-between">
        <div class="flex justify-between flex-1 sm:hidden">
            {% if paginator.prev_page_url %}
                <a href="{{ paginator.prev_page_url }}" 
                   class="relative inline-flex items-center px-4 py-2 text-sm font-medium text-t-primary/80 bg-card border border-white/5 rounded-md hover:text-white hover:bg-accent-500/10 focus:outline-none transition ease-in-out duration-150">
                    « Previous
                </a>
            {% else %}
                <span 
                   class="relative inline-flex items-center px-4 py-2 text-sm font-medium text-t-primary/50 bg-card border border-white/5 cursor-default rounded-md">
                    « Previous
                </span>
            {% endif %}
            {% if paginator.next_page_url %}
                <a href="{{ paginator.next_page_url }}" 
                   class="relative inline-flex items-center px-4 py-2 ml-3 text-sm font-medium text-t-primary/80 bg-card border border-white/5 rounded-md hover:text-white hover:bg-accent-500/10 focus:outline-none transition ease-in-out duration-150">
                    Next »
                </a>
            {% else %}
                <span 
                   class="relative inline-flex items-center px-4 py-2 ml-3 text-sm font-medium text-t-primary/50 bg-card border border-white/5 cursor-default rounded-md">
                    Next »
                </span>
            {% endif %}
        </div>

        <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
            <div>
                <p class="text-sm text-t-primary/80">
                    Showing
                    <span class="font-medium">{{ paginator.from }}</span>
                    to
                    <span class="font-medium">{{ paginator.to }}</span>
                    of
                    <span class="font-medium">{{ paginator.total }}</span>
                    results
                </p>
            </div>
            <div>
                <span class="relative z-0 inline-flex shadow-sm rounded-md">
                    {% if paginator.prev_page_url %}
                        <a href="{{ paginator.prev_page_url }}" 
                           class="relative inline-flex items-center px-2 py-2 text-sm font-medium text-t-primary/80 bg-card border border-white/5 rounded-l-md hover:text-white hover:bg-accent-500/10 focus:z-10 focus:outline-none transition ease-in-out duration-150" 
                           aria-label="« Previous">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    {% else %}
                        <span 
                           class="relative inline-flex items-center px-2 py-2 text-sm font-medium text-t-primary/50 bg-card opacity-50 border border-white/5 rounded-l-md cursor-default">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        </span>
                    {% endif %}

                    {% for link in paginator.links %}
                        {% if link.label != '&laquo; Previous' and link.label != 'Next &raquo;' %}
                            {% if link.url %}
                                {% if link.active %}
                                    <span 
                                    aria-current="page" 
                                    class="relative inline-flex items-center px-4 py-2 -ml-px text-sm font-medium text-t-primary bg-accent-500 border border-accent-600 cursor-default">
                                        {{ link.label }}
                                    </span>
                                {% else %}
                                    <a href="{{ link.url }}" 
                                    class="relative inline-flex items-center px-4 py-2 -ml-px text-sm font-medium text-t-primary/80 bg-card border border-white/5 hover:text-white hover:bg-accent-500/10 focus:z-10 focus:outline-none transition ease-in-out duration-150" 
                                    aria-label="Go to page {{ link.label }}">
                                        {{ link.label }}
                                    </a>
                                {% endif %}
                            {% endif %}
                        {% endif %}
                    {% endfor %}

                    {% if paginator.next_page_url %}
                        <a href="{{ paginator.next_page_url }}" 
                           rel="next" 
                           class="relative inline-flex items-center px-2 py-2 -ml-px text-sm font-medium text-t-primary/50 bg-card border border-white/5 rounded-r-md hover:text-white hover:bg-accent-500/10 focus:z-10 focus:outline-none transition ease-in-out duration-150" 
                           aria-label="Next »">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    {% else %}
                        <span 
                           class="relative inline-flex items-center px-2 py-2 -ml-px text-sm font-medium text-t-primary/50 bg-card opacity-50 border border-white/5 rounded-r-md cursor-default">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        </span>
                    {% endif %}
                </span>
            </div>
        </div>
    </nav>
</div>